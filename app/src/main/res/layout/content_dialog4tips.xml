<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog4uploadtips_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucent"
    android:orientation="vertical"
    android:padding="@dimen/dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog4tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textSize="@dimen/sp22" />

        <TextView
            android:id="@+id/tv_dialog4tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp16"
            android:text="提示文字"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_ww"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="@dimen/dp16"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_dialog4tips_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/sele_text_color"
                android:textSize="@dimen/sp18"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_dialog4tips_config"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@drawable/sele_text_color"
                android:textSize="@dimen/sp18"

                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>