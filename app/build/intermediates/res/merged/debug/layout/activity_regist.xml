<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp16"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp40"
            android:paddingTop="@dimen/dp16">


            <EditText
                android:id="@+id/regist_user_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editline"
                android:hint="@string/login_username"
                android:padding="@dimen/dp8"
                android:singleLine="true" />


            <EditText
                android:id="@+id/regist_pw_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/editline"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                android:padding="@dimen/dp8"
                android:singleLine="true" />


            <EditText
                android:id="@+id/regist_pwcheck_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/editline"
                android:hint="@string/regist_check"
                android:inputType="textPassword"
                android:padding="@dimen/dp8" />


            <EditText
                android:id="@+id/regist_incode_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/editline"
                android:hint="@string/regist_involvecode"
                android:padding="@dimen/dp8"
                android:singleLine="true" />


            <EditText
                android:id="@+id/regist_ques_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/editline"
                android:hint="@string/regist_et_yanzhengques"
                android:padding="@dimen/dp8"
                android:singleLine="true" />


            <EditText
                android:id="@+id/regist_answer_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/editline"

                android:hint="@string/regist_et_answer"
                android:padding="@dimen/dp8"
                android:singleLine="true" />

        </LinearLayout>


        <Button
            android:id="@+id/regist_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:layout_marginTop="@dimen/dp16"
            android:background="@drawable/sele_login_btn"
            android:text="@string/regist_bt"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </LinearLayout>


</RelativeLayout>