<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hzu.zao.view.CircleImageView
            android:id="@+id/user_icon_ques"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/usericon_default" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/user_icon_ques"
            android:text="Name" />

        <ImageView
            android:id="@+id/sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/woman_icon" />

        <TextView
            android:id="@+id/txt_login_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@+id/sex"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/im_force_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sex"
            android:scaleType="centerInside"
            android:src="@drawable/bmob_update_btn_check_off_holo_light" />
    </RelativeLayout>
</LinearLayout>